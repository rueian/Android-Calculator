<?xml version="1.0" encoding="utf-8"?>
<com.rueian.calc.PadLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pad_nums"
    style="@style/PadLayoutStyle.Nums"
    android:background="@color/pad_nums"
    android:columnCount="3"
    android:rowCount="5"
    android:elevation="4dip">

    <Button
        android:id="@+id/btn_7"
        style="@style/PadBtnStyle.Num"
        android:onClick="onBtnClick"
        android:text="1" />

    <Button
        android:id="@+id/btn_8"
        style="@style/PadBtnStyle.Num"
        android:onClick="onBtnClick"
        android:text="2" />

    <Button
        android:id="@+id/btn_9"
        style="@style/PadBtnStyle.Num"
        android:onClick="onBtnClick"
        android:text="3" />

    <Button
        android:id="@+id/btn_4"
        style="@style/PadBtnStyle.Num"
        android:onClick="onBtnClick"
        android:text="4" />

    <Button
        android:id="@+id/btn_5"
        style="@style/PadBtnStyle.Num"
        android:onClick="onBtnClick"
        android:text="5" />

    <Button
        android:id="@+id/btn_6"
        style="@style/PadBtnStyle.Num"
        android:onClick="onBtnClick"
        android:text="6" />

    <Button
        android:id="@+id/btn_1"
        style="@style/PadBtnStyle.Num"
        android:onClick="onBtnClick"
        android:text="7" />

    <Button
        android:id="@+id/btn_2"
        style="@style/PadBtnStyle.Num"
        android:onClick="onBtnClick"
        android:text="8" />

    <Button
        android:id="@+id/btn_3"
        style="@style/PadBtnStyle.Num"
        android:onClick="onBtnClick"
        android:text="9" />

    <Button
        android:id="@+id/btn_point"
        style="@style/PadBtnStyle.Num"
        android:onClick="onBtnClick"
        android:text="." />

    <Button
        android:id="@+id/btn_0"
        style="@style/PadBtnStyle.Num"
        android:onClick="onBtnClick"
        android:text="0" />

    <Button
        android:id="@+id/btn_eq"
        style="@style/PadBtnStyle.Num.Equals"
        android:background="@drawable/pad_btn_spec_bg"
        android:onClick="onBtnClick"
        android:text="=" />

    <Button
        android:id="@+id/btn_lq"
        style="@style/PadBtnStyle.Num"
        android:onClick="onBtnClick"
        android:text="(" />

    <Button
        android:id="@+id/btn_rq"
        style="@style/PadBtnStyle.Num"
        android:onClick="onBtnClick"
        android:text=")" />

    <Button
        android:id="@+id/btn_del"
        style="@style/PadBtnStyle.Num"
        android:background="@drawable/pad_btn_spec_bg"
        android:onClick="onBtnClick"
        android:text="C" />

</com.rueian.calc.PadLayout>